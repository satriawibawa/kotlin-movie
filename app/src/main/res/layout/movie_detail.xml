<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.piusanggoro.cataloquemovie.activity.MovieDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mvDtImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mvDtImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mvDtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/mvDtStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mvDaterelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YYYY-MM-DD"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/mvDtOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Lorem ipsum"
        android:textAlignment="textStart"
        android:textSize="16sp" />
</LinearLayout>
