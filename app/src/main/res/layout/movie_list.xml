<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mvImage"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/mvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mvImage"
                android:paddingLeft="10dp"
                android:layout_marginTop="16dp"
                android:text="Movie Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mvStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Movie Vote"
                android:layout_below="@id/mvTitle"
                android:layout_toRightOf="@id/mvImage"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/mvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Date"
                android:layout_below="@id/mvStar"
                android:layout_toRightOf="@id/mvImage"
                android:paddingLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>